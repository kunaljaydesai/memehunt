html(lang="en")
extends layout
block content
	div(style="text-align:center;")
		h1(style="font-size: 48; font-weight: 600;") Popular
		br
		for post in todayposts
			div(style="width: 90%; height: 100px; margin-left: auto; margin-right: auto;", class="postsnippet")
				if post.liked
					div(style="text-align: center; width: 25px; display: inline-block; float: left; z-index: -1;")
						img(src="/images/icon-triangle-active.png", id=post.url, disabled ='disabled', style="float: left; width: 25px; height: auto; display: block; margin: 0 auto;", classpare="unvote")
						p(style="font-size: 24;") #{post.likes}
						
				else
					div(style="text-align: center; width: 30px; display: inline-block; float: left; z-index: -1;")
						img(src="/images/icon-triangle.png", id=post.url, disabled ='disabled', style="float: left; width: 25px; height: auto; display: block; margin: 0 auto;", class='vote')
						p(style="font-size: 24;") #{post.likes}

				
				div(style="display: inline-block;  overflow: hidden; height:100px; z-index:-1; text-overflow: ellipsis; white-space: nowrap;" class="textContainer")
					a(href=post.url) #{post.title}
					br
					body Author: #{post.author}
				img(src=post.snippet, style="float: right; display:inline-block;", height="60", width="60", class="img-thumbnail")
				br
				br
	div(style='float: right; float: bottom; position: fixed; width: 10%; height: 10%')
					a(href="/upload")
						img(style='position: fixed; bottom: 0; right: 0; width:75px; height: auto;' src="/images/icon-upload.png" href="/upload")
